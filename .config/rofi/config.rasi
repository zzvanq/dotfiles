configuration {
  font: "Iosevka Nerd Font 16";
  modes: "combi";
  show-icons: true;
  combi-modes: "drun,window,ssh";
  combi-hide-mode-prefix: true;
  steal-focus: true;
  matching: "regex";
  display-combi: "";
  run-shell-command: '{terminal} --hold -e {cmd}';
  ssh-command: "{terminal} -e {ssh-client} root@{host}";
}

